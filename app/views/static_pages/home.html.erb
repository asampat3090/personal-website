<div class="center hero-unit" >
  <h1>Anand Sampat</h1>

  <h2>
    I dream about efficiency.
  </h2>

  <%= link_to "My Projects", projects_path, class: "btn btn-large btn-primary" %>
</div>

<div id="myCarousel" class="carousel slide">

  <!-- Carousel items -->
  <div class="carousel-inner">

    <div class="active item">
      <%= image_tag("homepage_carousel/UC_Berkeley_sf_view.jpeg", alt: "Berkeley") %>
      <div class="carousel-caption">
        <p>Beautiful view of the Campanile, Berkeley, and SF.</p>
      </div>
    </div>
    <div class="item">
      <%= image_tag("homepage_carousel/sather_gate.jpeg", alt: "Berkeley") %>
      <div class="carousel-caption">
        <p>The hustle and bustle of Sproul Plaza</p>
      </div>
    </div>
    <div class="item">
      <%= image_tag("homepage_carousel/Stanford_Memorial_Church.png", alt:  "Stanford") %>
      <div class="carousel-caption">
        <p>The other school across the Bay - beautiful in it's own way.</p>
      </div>
    </div>

  </div>
  <!-- Carousel nav -->
  <a id="cl" class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a id="cr" class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>


<script>
    $('#myCarousel').carousel({
        interval: 5000
    });
</script>